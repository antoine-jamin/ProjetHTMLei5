<% include ../partials/head %>

<div class="row">
	<div class="col-md-8 col-md-offset-1">
		<h1> Liste des patients </h1>
	</div>
</div>
<% var pam_moyenne=0; var pince_moyenne=0; var num=0; %>
<div class="row">
	<div class="col-md-12">
		<div class="col-md-10 col-md-offset-1">
			<% if (!all_sheet.length) { %>
				<b> Pas de patients enregistrés </b>
				<br><br>

			<%} else { %>
				Numéro de dossier
				<ol>
				<% for (i = 0; i < all_sheet.length; i++){ %>
<li><a href="patients/<%= all_sheet[i] %>"><%= all_sheet[i] %></a> </li>
				<% } %>
				</ol>
			<% } %>
		</div>
	</div>
</div>

<br>
<!-- Simple upload button -->
<div class="row">
	<div class="col-md-8 col-md-offset-1">
    <form  
      action='upload' 
      method='post' 
      encType="multipart/form-data">
        <input type="file" name="file" id="file-2" class="inputfile inputfile-2" data-multiple-caption="{count} files selected" multiple />
					<label for="file-2"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/></svg> <span id=file_name>Choose a file&hellip;</span></label>
        <br>
        <input type='submit'  id="upload_btn" class="button" value='Upload' disabled />
    </form>  
    </div>
</div>
<br>

<script>
  document.getElementById('file-2').onchange = function () {
  //alert('Selected file: ' + this.value);
  var str = this.value;
  var res = str.split('\\');
  document.getElementById('file_name').innerHTML =  res[res.length-1];
  document.getElementById('upload_btn').disabled =  false;
};
</script>

